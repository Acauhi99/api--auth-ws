{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/types.d.ts"],
  "files": ["src/types.d.ts"]
}
